{
  "env": {
      "browser": true,
      "es6": true
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [
                  ".js",
                  ".ts"
              ]
          }
      }
  },
  "extends": [
      "airbnb-base"
  ],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
      "no-plusplus": "off",
      "no-bitwise": "off",
      "no-mixed-operators": "off",
      "class-methods-use-this": "off",
      "no-console": "off",
      "func-names": "off",
      "linebreak-style": "off",
      "no-param-reassign": ["error", {"props": false}],
      "prefer-promise-reject-errors": "off"
  }
}